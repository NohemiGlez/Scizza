extends dashboard_base

block content
    div(class='col-sm-12')
        div(class='col-sm-9 offset-sm-3')
            div(class='row h-100 full-height')
                div(class='col-sm-11 pt-4')
                    br
                    div(class='user-information mt-2')
                        br
                        br
                        img(src='/images/pusheen_pizza.jpg' class='open-input-file rounded-circle user-icon2 float-sm-left mr-5')
                        p(class='presentation-text mt-5') #{username}
                        a(href='#') Actualizar foto de perfil
                    hr
                br
                div(class='col-sm-12 mt-4')
                    p(class='presentation-text text-left') Datos personales
                    form(action='/developerMembers' method='PUT')
                        div(class='row')
                            div(class='form-group col-12 col-sm-6')
                                label(for='birthdate') Fecha de nacimiento
                                input(type='text' class='form-control' placeholder='1999-12-12' name='birthDate')
                            div(class='form-group col-12 col-sm-6')
                                label(for='curp') CURP
                                input(type='text' class='form-control' placeholder='12345678912345678' name='curp')
                            div(class='form-group col-12 col-sm-6')
                                label(for='rfc') RFC
                                input(type='text' class='form-control' placeholder='12345678912345678' name='rfc')
                            div(class='form-group col-12 col-sm-6')
                                label(for='address') Domicilio
                                input(type='text' class='form-control' placeholder='Calle Mozarella #5555' name='address')
                        div(class='col-sm-12 mt-3')
                            p(class='presentation-text text-left') Cuéntanos, ¿en qué eres bueno?
                                div(class='row')
                                    div(class='form-group col-sm-6')
                                        label(for='skill') Habilidad de programación
                                        select(class='form-control')
                                            option Java
                                            option PHP
                                            option Ruby
                                    div(class='form-group col-sm-6')
                                        label(for='level' class='') Nivel
                                        select(class='form-control')
                                            option Senior
                                            option Junior
            br
            input(type='submit' class='btn btn-danger float-right' value='Guardar perfil')
            input(type='hidden' class='btn btn-danger float-right' value='5bfe1e3d891887225d55ce73' name='id')
