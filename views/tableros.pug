extends dashboard_base

block content
    a(class='btn-corner btn btn-danger text-light' id='show-modal' data-toggle="modal" data-target="add-userStory") Agregar historia de usuario
    div(class="modal fade" id="add-userStory" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true")
        div(class="modal-dialog bg-light col-sm-12" role="document")
            form(action='/userStory' method='POST')
                div(class="modal-content")
                    div(class="modal-header col-sm-12")
                        h5(class="modal-title" id="exampleModalLabel") Agregar proyecto
                        button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                    div(class="modal-body col-sm-12")
                        div(class='form-group col-12 col-sm-12')
                            label(for='backlogId') TEMPORAL NECESITO JALAR EL ID DEL PROYECTO
                            input(type='text' class='form-control' name='projectName' placeholder='Proyecto DRAW')
                        div(class='form-group col-sm-6')
                            label(for='size') Equipo
                                select(class='form-control' name='developerTeam')
                                    option 1
                                    option 2
                                    option 3
                                    option 5
                                    option 8
                                    option 13
                                    option 21
                        div(class='form-group col-sm-6')
                            label(for='priority') Equipo
                                select(class='form-control' name='developerTeam')
                                    option 1
                                    option 2
                                    option 3
                                    option 4
                                    option 5
                                    option 6
                                    option 7
                                    option 8
                                    option 9
                                    option 10
                        div(class='form-group col-12 col-sm-6')
                            label(for='name') Fecha de solcitud
                            input(type='text' class='form-control' placeholder='1999-12-12' name='projectRequestDate')
                        div(class='form-group col-12 col-sm-6')
                            label(for='asRole') Fecha de arranque
                            input(type='text' class='form-control' placeholder='1999-12-12' name='projectStartDate')
                        div(class='form-group col-12 col-sm-6')
                            label(for='want') Descripci√≥n
                            input(type='text' class='form-control' placeholder='Fabuloso proyecto' name='projectDescription')
                        div(class='form-group col-12 col-sm-6')
                            label(for='soThat') Product owner
                            input(type='text' class='form-control' placeholder='Juanito Alcachofa' name='productOwner')
                        div(class='form-group col-12 col-sm-6')
                            label(for='given') Product owner
                            input(type='text' class='form-control' placeholder='Juanito Alcachofa' name='productOwner')
                        div(class='form-group col-12 col-sm-6')
                            label(for='when') Product owner
                            input(type='text' class='form-control' placeholder='Juanito Alcachofa' name='productOwner')
                        div(class='form-group col-12 col-sm-6')
                            label(for='then') Product owner
                            input(type='text' class='form-control' placeholder='Juanito Alcachofa' name='productOwner')
                        div(class="modal-footer")

                            button(type="button" class="btn btn-secondary" data-dismiss="modal") Cerrar
                            input(type='submit' class='btn btn-danger' value='Agregar')



